<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MauiMathsApp.Views.GamePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="GamePage">

    <VerticalStackLayout Padding="100" Spacing="25">

        <Label
            x:Name="QuestionLabel"
            FontSize="36"
            HorizontalOptions="Center"
            VerticalOptions="Center" />

        <Entry x:Name="Answer" HorizontalOptions="Center" />

        <Button
            x:Name="SubmitAnswer"
            Clicked="SubmitAnswer_Clicked"
            HorizontalOptions="Center"
            Text="Answer" />

        <Label
            x:Name="AnswerLabel"
            HorizontalOptions="Center"
            VerticalOptions="Center" />

        <Label
            x:Name="GameOverLabel"
            HorizontalOptions="Center"
            VerticalOptions="Center" />

    </VerticalStackLayout>
</ContentPage>